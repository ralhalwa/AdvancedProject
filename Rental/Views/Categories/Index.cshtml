@{
    ViewData["Title"] = "Equipment Categories";
}

<section class="container mx-auto py-16">
    <h2 class="text-4xl font-bold text-center mb-12">Browse Equipment Categories</h2>
    <div class="grid md:grid-cols-3 sm:grid-cols-1 gap-8">
        <!-- Category Card: Power Tools -->
        <div class="bg-white rounded-lg shadow-md overflow-hidden">
            <div class="p-6">
                <h3 class="text-xl font-semibold mb-2">Power Tools</h3>
                <p class="text-gray-600">Drills, saws, grinders, and more.</p>
                <a href="/Categories/PowerTools" class="mt-4 inline-block bg-indigo-600 hover:bg-indigo-700 text-white py-2 px-4 rounded">View Items</a>
            </div>
        </div>

        <!-- Category Card: Construction Equipment -->
        <div class="bg-white shadow-lg rounded overflow-hidden">
            <div class="p-6">
                <h3 class="font-semibold text-xl mb-2">Construction Equipment</h3>
                <p class="text-gray-600">Heavy machinery for construction needs.</p>
                <a href="/Categories/Construction" class="mt-4 inline-block bg-indigo-600 hover:bg-indigo-700 text-white py-2 px-4 rounded">View Items</a>
            </div>
        </div>
        <!-- Category Card: Event Rentals -->
        <div class="bg-white rounded-lg shadow-lg overflow-hidden">
            <div class="p-6">
                <h3 class="font-semibold text-xl mb-2">Event Equipment</h3>
                <p class="text-gray-600">Everything you need for events.</p>
                <a href="/Categories/Events" class="mt-4 inline-block bg-indigo-600 hover:bg-indigo-700 text-white py-2 px-4 rounded">Explore Items</a>
            </div>
        </div>

    <!-- Category Card: Outdoor Equipment -->
    <div class="bg-white rounded-lg shadow-lg overflow-hidden">
        <div class="p-6">
            <h3 class="font-semibold text-xl mb-2">Outdoor Equipment</h3>
            <p class="text-gray-600">Tents, generators, and more.</p>
            <a href="/Categories/Outdoor" class="mt-4 inline-block bg-indigo-600 hover:bg-indigo-700 text-white py-2 px-4 rounded">View Items</a>
        </div>
    </div>

    <!-- Category Card: Gardening Tools -->
    <div class="bg-white rounded-lg shadow-lg overflow-hidden">
        <div class="p-6">
            <h3 class="font-semibold text-xl mb-2">Gardening Tools</h3>
            <p class="text-gray-600">Essential tools for gardening.</p>
            <a href="/Categories/Gardening" class="mt-4 inline-block bg-indigo-600 hover:bg-indigo-700 text-white py-2 px-4 rounded">Explore Tools</a>
        </div>
    </div>

    <!-- Category Card: Cameras & AV -->
    <div class="bg-white rounded-lg shadow-lg overflow-hidden">
        <div class="p-6">
            <h3 class="font-semibold text-xl mb-2">Cameras & AV Equipment</h3>
            <p class="text-gray-600">Professional audiovisual equipment for your projects.</p>
            <a href="/Categories/AV" class="mt-4 inline-block bg-indigo-600 hover:bg-indigo-700 text-white py-2 px-4 rounded">Check Equipment</a>
        </div>
    </div>

    <!-- Category Card: Miscellaneous -->
    <div class="bg-white rounded-lg shadow-lg overflow-hidden">
        <div class="p-6">
            <h3 class="font-semibold text-xl mb-2">Miscellaneous</h3>
            <p class="text-gray-600">Various tools and accessories.</p>
            <a href="/Categories/Misc" class="mt-4 inline-block bg-indigo-600 hover:bg-indigo-700 text-white py-2 px-4 rounded">Browse Items</a>
        </div>
    </div>
    </div>
    
</section>

