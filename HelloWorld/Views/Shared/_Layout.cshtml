<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Equipment Rental System</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50 text-gray-800 flex flex-col min-h-screen">
    <header class="bg-white shadow-md">
        <nav class="container mx-auto px-4 py-4 flex items-center justify-between">
            <a class="text-2xl font-bold text-orange-500 hover:text-orange-600" asp-area="" asp-controller="Home" asp-action="Index">Equipment Rental</a>
            <button class="sm:hidden text-gray-600 focus:outline-none" onclick="document.getElementById('nav-content').classList.toggle('hidden')">
                <i class="fas fa-bars"></i>
            </button>
            <div class="hidden sm:flex sm:items-center space-x-6" id="nav-content">
                <a class="text-gray-600 hover:text-orange-500" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                <a class="text-gray-600 hover:text-orange-500" asp-area="" asp-controller="Inventory" asp-action="Index">Inventory</a>
                <a class="text-gray-600 hover:text-orange-500" asp-area="" asp-controller="RentalRequests" asp-action="Index">Requests</a>
                <a class="text-gray-600 hover:text-orange-500" asp-area="" asp-controller="Reports" asp-action="Index">Reports</a>
                <a class="text-gray-600 hover:text-orange-500" asp-area="" asp-controller="SignIn" asp-action="Index">
                    <i class="fas fa-user"></i> Sign In
                </a>
            </div>
        </nav>
    </header>

    <main class="flex-grow container mx-auto py-6 px-4">
        @RenderBody()
    </main>

    <footer class="bg-gray-900 text-gray-300 py-4">
        <div class="container mx-auto text-center">
            &copy; 2025 - Equipment Rental System - <a class="text-orange-500 hover:underline" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>