@{
    ViewData["Title"] = "Sign In";
}

<div class="container d-flex justify-content-center align-items-start" style="height: 100vh; padding-top: 50px;">
    <div class="card p-5 shadow-sm" style="max-width: 500px; width: 100%;">
        <h2 class="text-center mb-4">Sign In</h2>

        @if (ViewBag.Message != null)
        {
            <div class="alert alert-success">
                @ViewBag.Message
            </div>
        }

        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger">
                @ViewBag.ErrorMessage
            </div>
        }

        <form method="post" action="/Signin/SignIn">
            <div class="form-group mb-3">
                <label for="username">Email</label>
                <input type="text" class="form-control form-control-lg" id="username" name="username" required />
            </div>
            <div class="form-group mb-3">
                <label for="password">Password</label>
                <input type="password" class="form-control form-control-lg" id="password" name="password" required />
            </div>
            <div class="text-center mb-3">
                <button type="submit" class="btn btn-primary btn-lg">Sign In</button>
            </div>
        </form>

        <!-- Create Account Link -->
        <div class="text-center">
            <p>Don't have an account? <a href="/SignUp" class="btn btn-link">Create Account</a></p>
        </div>
    </div>
</div>
