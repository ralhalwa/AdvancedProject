@{
    ViewData["Title"] = "Profile";
    Layout = null;
}

<div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8 bg-gray-50">
    <div class="max-w-md w-full space-y-8 bg-white p-10 rounded-lg shadow-md">
        <h2 class="text-center text-3xl font-extrabold text-gray-900">Profile</h2>

        @if (ViewBag.Message != null)
        {
            <div class="bg-green-100 text-green-800 p-3 rounded mb-4">
                @ViewBag.Message
            </div>
        }

        @if (ViewBag.ErrorMessage != null)
        {
            <div class="bg-red-100 text-red-800 p-3 rounded mb-4">
                @ViewBag.ErrorMessage
            </div>
        }

        <form class="mt-8 space-y-6" method="post" action="/Profile/Profile">
            <div>
                <label for="firstName" class="block text-sm font-medium text-gray-700">First Name</label>
                <input id="firstName" name="firstName" type="text" required
                       class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-orange-500 focus:border-orange-500"
                       value="@ViewBag.FirstName" />
            </div>

            <div>
                <label for="lastName" class="block text-sm font-medium text-gray-700">Last Name</label>
                <input id="lastName" name="lastName" type="text" required
                       class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-orange-500 focus:border-orange-500"
                       value="@ViewBag.LastName" />
            </div>

            <div>
                <label for="email" class="block text-sm font-medium text-gray-700">Email</label>
                <input id="email" name="email" type="email" required
                       class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-orange-500 focus:border-orange-500"
                       value="@ViewBag.Email" />
            </div>

            <div>
                <label for="nPassword" class="block text-sm font-medium text-gray-700">New Password</label>
                <input id="nPassword" name="nPassword" type="password"
                       class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-orange-500 focus:border-orange-500" />
            </div>

            <div>
                <label for="cPassword" class="block text-sm font-medium text-gray-700">Confirm Password</label>
                <input id="cPassword" name="cPassword" type="password"
                       class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-orange-500 focus:border-orange-500" />
            </div>

            <div class="text-center">
                <button type="submit" class="w-full py-2 px-4 bg-orange-500 hover:bg-orange-600 text-white rounded-md">Update Profile</button>
            </div>
        </form>


        <div class="text-center mt-4">
            <a href="/Home" class="text-sm text-gray-600 hover:text-orange-600">Back to Dashboard</a>
        </div>
    </div>
</div>

<!-- Tailwind CSS CDN -->
<script src="https://cdn.tailwindcss.com"></script>
