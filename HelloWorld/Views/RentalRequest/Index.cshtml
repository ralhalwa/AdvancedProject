@model List<ClassLibrary.Models.RentalRequest>

<h1 class="text-2xl font-bold mb-4">My Rental Requests</h1>

@if (TempData["SuccessMessage"] != null)
{
    <p class="text-green-500">@TempData["SuccessMessage"]</p>
}

@if (TempData["ErrorMessage"] != null)
{
    <p class="text-red-500">@TempData["ErrorMessage"]</p>
}

@if (Model != null && Model.Any())
{
    <table class="border-collapse border border-gray-400 w-full">
        <thead>
            <tr class="bg-gray-200">
                <th class="border border-gray-400 px-4 py-2">Equipment Name</th>
                <th class="border border-gray-400 px-4 py-2">Start Date</th>
                <th class="border border-gray-400 px-4 py-2">Return Date</th>
                <th class="border border-gray-400 px-4 py-2">Cost</th>
                <th class="border border-gray-400 px-4 py-2">Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var request in Model)
            {
                <tr>
                    <td class="border border-gray-400 px-4 py-2">@request.Equipment?.Name</td>
                    <td class="border border-gray-400 px-4 py-2">@request.StartDate.ToShortDateString()</td>
                    <td class="border border-gray-400 px-4 py-2">@request.ReturnDate.ToShortDateString()</td>
                    <td class="border border-gray-400 px-4 py-2">$@request.Cost</td>
                    <td class="border border-gray-400 px-4 py-2">@request.RentalStatus1?.Status</td>
                </tr>
            }
        </tbody>
    </table>

}
else
{
    <p class="text-gray-500">No rental requests found.</p>
}
