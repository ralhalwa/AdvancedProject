@{
    var rentalRequest = ViewBag.RentalRequest as ClassLibrary.Models.RentalRequest;
}
<h2 class="text-2xl font-bold">Pay for @rentalRequest.Equipment.Name</h2>
<p>Total Cost: $@rentalRequest.Cost</p>

<form asp-action="ConfirmPayment" asp-controller="RentalRequest" method="post">
    <input type="hidden" name="requestId" value="@rentalRequest.Id" />
    <button type="submit" class="bg-green-500 text-white px-4 py-2 rounded mt-4">Confirm Payment</button>
</form>
