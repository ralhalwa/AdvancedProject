@{
    ViewData["Title"] = "Payment";
    var equipment = ViewBag.Equipment as ClassLibrary.Models.Equipment;
}

<section class="container mx-auto py-8 px-4 max-w-xl">
    <h2 class="text-2xl font-bold mb-6">Complete Payment for @equipment?.Name</h2>
    <p class="mb-4 text-gray-600">You are renting this item for 7 days at <strong>$@equipment?.Price</strong> per day.</p>
    <p class="mb-6 text-gray-800 font-semibold">Total: <span class="text-orange-500 text-xl">$@(equipment?.Price * 7)</span></p>

    <form asp-action="CreateAfterPayment" method="post">
        <input type="hidden" name="equipmentId" value="@equipment?.Id" />

        <!-- Simulate Payment -->
        <div class="mb-4">
            <label class="block text-sm font-medium text-gray-700 mb-1">Card Number</label>
            <input type="text" class="w-full border rounded px-3 py-2" required />
        </div>

        <button type="submit" class="bg-orange-500 text-white font-semibold py-2 px-4 rounded hover:bg-orange-600 transition">
            Confirm & Pay
        </button>
    </form>
</section>
