@{
    ViewData["Title"] = "Equipment Rental System";
}

<!-- Hero Section -->
<section class="bg-cover bg-center py-28 text-center mx-screen" style="background-image: url('/images/machine.png');">
    <div class="container mx-auto bg-black bg-opacity-50 py-10 rounded-lg">
        <h1 class="text-5xl font-bold text-white mb-4">Rent Equipment Effortlessly</h1>
        <p class="text-xl text-gray-200 mb-8">Access top-quality rental equipment instantly, wherever you need it.</p>
        <a href="/Equipment" class="bg-orange-500 hover:bg-orange-600 text-white py-3 px-6 rounded-lg text-lg mx-2">Explore Inventory</a>
        <a href="/RentalRequest" class="bg-transparent border border-white text-white hover:bg-white hover:text-gray-800 py-3 px-6 rounded-lg text-lg mx-2">Request Rental</a>
    </div>
</section>

<!-- How It Works -->
<section class="container mx-screen py-16">
    <h2 class="text-4xl font-bold text-center mb-12">How It Works</h2>
    <div class="grid md:grid-cols-3 gap-8 text-center">
        <div>
            <div class="text-5xl text-orange-500 mb-4">
                <i class="fas fa-search"></i>
            </div>
            <h3 class="font-semibold text-xl mb-2">Find Equipment</h3>
            <p class="text-gray-600">Search our extensive inventory for the equipment you need.</p>
        </div>
        <div>
            <div class="text-5xl text-orange-500 mb-4">
                <i class="fas fa-calendar-check"></i>
            </div>
            <h3 class="font-semibold text-xl mb-2">Book Your Rental</h3>
            <p class="text-gray-600">Easily schedule your rental at your convenience.</p>
        </div>
        <div>
            <div class="text-5xl text-orange-500 mb-4">
                <i class="fas fa-truck-moving"></i>
            </div>
            <h3 class="font-semibold text-xl mb-2">Receive & Return</h3>
            <p class="text-gray-600">Get equipment delivered to your location and returned seamlessly.</p>
        </div>
    </div>
</section>

<!-- Call to Action -->
<section class="text-center bg-gray-100 py-16">
    <h2 class="text-4xl font-bold mb-4">Ready to Get Started?</h2>
    <p class="mb-8">Join today and simplify your equipment rental experience!</p>
    <a href="/SignUp" class="bg-orange-500 hover:bg-orange-600 text-white py-3 px-8 rounded-lg text-lg">Sign Up Now</a>
</section>

<!-- Footer -->
<footer class="bg-gray-900 text-gray-300 py-6">
    <div class="container mx-auto text-center">
        <p>&copy; 2025 Equipment Rental System. All Rights Reserved.</p>
        <small>Designed & Developed by Your Company</small>
    </div>
</footer>

